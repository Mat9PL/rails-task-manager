<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to "#{task.completed ? '[x]' : '[..]'} --- #{task.title}  ", task_path(task.id) %>
      <%= link_to "Delete this task", task_path(task.id), method: :delete, data: { confirm: "Are you sure?" }  %>
    </li>
  <% end %>
</ul>

<%= link_to 'Create new task', new_task_path %>
